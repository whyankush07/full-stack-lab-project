<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Payroll System</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Employee Payroll Dashboard</h1>
    <a href="/add" class="btn">Add New Employee</a>
    
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Department</th>
          <th>Basic Salary</th>
          <th>Tax (10%)</th>
          <th>Net Salary</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(employee => { %>
          <% const tax = employee.basicSalary * 0.10; %>
          <% const netSalary = employee.basicSalary - tax; %>
          <tr>
            <td><%= employee.id %></td>
            <td><%= employee.name %></td>
            <td><%= employee.department %></td>
            <td>$<%= employee.basicSalary.toFixed(2) %></td>
            <td>$<%= tax.toFixed(2) %></td>
            <td>$<%= netSalary.toFixed(2) %></td>
            <td>
              <a href="/edit/<%= employee.id %>" class="action-link">Edit</a>
              <a href="/delete/<%= employee.id %>" class="action-link delete">Delete</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
